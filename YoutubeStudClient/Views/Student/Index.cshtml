@{
    ViewData["Title"] = "Index";
}

<h1>Student Data</h1>

<div>
    <input type="button" id="btnGetAll" name="btnGetAll" class="btn btn-info" value="Get Data" />
    <input type="button" id="btnAddNEw" name="btnAddNEw" class="btn btn-primary" value="Add New" />
</div>
<div class="container">
    <div class="container-fluid">
        <table id="studtbl" class="table table-responsive table-striped table-bordered">
            <tr>
                <th>Selection</th>
                <th>Student Name</th>
                <th>Age</th>
                <th>Address</th>
                <th></th>
            </tr>
            <tbody id="studtblbody" name="studtblbody">
            </tbody>
        </table>
    </div>

    <p></p><br />

</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            debugger;

            $('#btnGetAll').click(function () {
                debugger;
                getData();
            })


            function getData()
            {
                debugger;
                $.ajax({
                    type: 'GET',
                    url: 'http://localhost:5128/api/Students',
                    contentType: 'json',
                    //data: { txtFromDate: dfrom, txtToDate: dto, dpdnperson: pname, id: pid },
                    success: function (response) {
                        if (response.length == 0) {
                            alert(response);
                        } else {
                            $.each(response, function (index, item)
                            {
                                $("#studtblbody").append("<tr><td><input type='radio' id='rd1' name='rd1' value=" + item.Id + " group='rad1' /><input type='hidden' id='r1' name='r1' value=" + item.Id + " /></td><td>" + item.StudentName + "</td> <td>" + item.age + " </td><td>" + item.Address + "</td> <td> <a id='a1' href=# value=" + item.Id + " >Edit</a> | <a id='a2' href=# value=" + item.Id + " >Delete</a> </td></tr>");
                            });
                        }
                    },
                    error: function (err) {
                        console.error(err);
                    }
                });
            }

            
            $(document).on("click", "#rd1", function () {
                debugger;
                var x = $('input[name="rd1"]:checked').val();
                alert( x + " radio clicked");
            });

            

            $(document).on("click", "#btnAddNEw", function () {
                debugger;
                $(location).prop('href', 'Student/CreateStudent')
            });

            $(document).on("click", "#a1", function () {
                debugger;
                var x = $(this).attr("value");
                //alert(x + " href clicked");
                editDataRed(x);
            });

            function editDataRed(g)
            {
                debugger;
                $(location).prop('href', 'Student/Edit/?id='+g)
            }

            $(document).on("click", "#a2", function () {
                debugger;
                var x = $(this).attr("value");
                if (confirm("Are you sure you want to delete this?"))
                {
                    deleteDataRed(x);
                }
                else
                {
                    return false;
                }
            });

            function deleteDataRed(g)
            {
                debugger;
                $.ajax({
                    type: 'DELETE',
                    url: 'http://localhost:5128/api/Students/Delete/' + g,
                    contentType: 'application/json',
                    success: function (response) {
                        if (response.length == 0) {
                            alert(response);
                        } else {
                            alert("Record Deleted!");
                        };
                    },
                    error: function (err) {
                        console.error(err);
                    }
                });
            }

        });
    </script>
}